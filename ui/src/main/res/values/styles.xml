<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white_100</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="Text.Regular" parent="Text">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text.Medium" parent="Text">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Text.Bold" parent="Text">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Text.L.Regular" parent="Text.Regular">
        <item name="android:textSize">18dp</item>
        <item name="lineHeight">22dp</item>
    </style>

    <style name="Text.L.Medium" parent="Text.Medium">
        <item name="android:textSize">18dp</item>
        <item name="lineHeight">22dp</item>
    </style>

    <style name="Text.L.Bold" parent="Text.Bold">
        <item name="android:textSize">18dp</item>
        <item name="lineHeight">22dp</item>
    </style>

    <style name="Text.S.Regular" parent="Text.Regular">
        <item name="android:textSize">14dp</item>
        <item name="lineHeight">18dp</item>
    </style>

    <style name="Text.S.Medium" parent="Text.Medium">
        <item name="android:textSize">14dp</item>
        <item name="lineHeight">18dp</item>
    </style>

    <style name="Text.S.Bold" parent="Text.Bold">
        <item name="android:textSize">14dp</item>
        <item name="lineHeight">18dp</item>
    </style>


    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:textAppearance">@style/Text.S.Medium</item>
        <item name="backgroundTint">@color/button_primary_selector</item>
        <item name="android:textColor">@color/button_primary_text_color</item>
    </style>

    <style name="Button.Accent" parent="Button">
        <item name="android:textAppearance">@style/Text.S.Medium</item>
        <item name="android:textColor">@color/button_primary_text_color</item>
        <item name="backgroundTint">@color/button_primary_selector</item>
        <item name="enforceMaterialTheme">true</item>
<!--        <item name="android:background">@empty</item>-->
        <item name="enforceTextAppearance">true</item>
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>

    </style>
</resources>